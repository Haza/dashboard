<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
        <title>{% block title %}{% endblock %} Dashboard</title>
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block stylesheets %}
            <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
            <link href="{{ asset('css/screen.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('bundles/hazadashboard/css/dashboard.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        <section id="wrapper">
            <header id="header">
                <div class="top">
                    {% block navigation %}
                        <nav>
                            <ul class="navigation">
                                <li><a href="{{ path('haza_dashboard_admin') }}">Admin</a></li>
                            </ul>
                        </nav>
                    {% endblock %}
                </div>

                <hgroup>
                    <h2>{% block dashboard_title %}<a href="{{ path('haza_dashboard_homepage') }}">Dashboard</a>{% endblock %}</h2>
                    <h3>{% block dashboard_tagline %}<a href="{{ path('haza_dashboard_homepage') }}">a simple fancy wow coolcool dashboard</a>{% endblock %}</h3>
                </hgroup>
            </header>

            <section class="main-col">
                {% for bookmark in bookmarks %}
                <h3>{{ bookmark.title }}</h3>
                {{ bookmark.url }}
                <img src="{{ asset(['uploads/documents/', bookmark.path] | join) | imagine_filter('my_thumb')  }}" class="large" />
                {% else %}
                <p>There are no entries right now.</p>
                {% endfor %}

                <div class="add"><a href="{{ path('haza_dashboard_adminAdd') }}">Add</a></div>
            </section>
        </section>

        {% block javascripts %}{% endblock %}
    </body>
</html>
